generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id             String   @id @default(cuid())
  type           String   // copy, sync, move
  src            String
  dst            String
  status         String   @default("pending") // pending, running, paused, completed, failed, cancelled
  progressBytes  BigInt   @default(0)
  totalBytes     BigInt   @default(0)
  speed          Int      @default(0)
  currentFile    String?
  errorMessage   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("tasks")
}

model Remote {
  id        String   @id @default(cuid())
  name      String   @unique
  type      String   // s3, drive, dropbox, etc.
  config    String   // JSON string, encrypted
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("remotes")
}